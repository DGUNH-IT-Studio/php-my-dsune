{% extends 'base.html.twig' %}

{% block title %}Schedule index{% endblock %}

{% block body %}
    <h1>Schedule index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>Week</th>
                <th>Weekday</th>
                <th>Lesson_num</th>
                <th>Lesson_title</th>
                <th>Reference</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for schedule in schedules %}
            <tr>
                <td>{{ schedule.id }}</td>
                <td>{{ schedule.dateStart ? schedule.dateStart|date('Y-m-d') : '' }}</td>
                <td>{{ schedule.dateEnd ? schedule.dateEnd|date('Y-m-d') : '' }}</td>
                <td>{{ schedule.week }}</td>
                <td>{{ schedule.weekday }}</td>
                <td>{{ schedule.lessonNum }}</td>
                <td>{{ schedule.lessonTitle }}</td>
                <td>{{ schedule.reference }}</td>
                <td>
                    <a href="{{ path('app_schedule_show', {'id': schedule.id}) }}">show</a>
                    <a href="{{ path('app_schedule_edit', {'id': schedule.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_schedule_new') }}">Create new</a>
{% endblock %}
