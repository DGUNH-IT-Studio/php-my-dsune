{% extends 'base.html.twig' %}

{% block title %}Term index{% endblock %}

{% block body %}
    <h1>Term index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num</th>
                <th>Date_start</th>
                <th>Date_end</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for term in terms %}
            <tr>
                <td>{{ term.id }}</td>
                <td>{{ term.num }}</td>
                <td>{{ term.dateStart ? term.dateStart|date('Y-m-d') : '' }}</td>
                <td>{{ term.dateEnd ? term.dateEnd|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_term_show', {'id': term.id}) }}">show</a>
                    <a href="{{ path('app_term_edit', {'id': term.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_term_new') }}">Create new</a>
{% endblock %}
